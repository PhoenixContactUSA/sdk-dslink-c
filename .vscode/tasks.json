    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "examples",
            "command": "DSA_CMAKE_ARGS='-DCMAKE_BUILD_TYPE=DEBUG -DDSLINK_BUILD_EXAMPLES=ON -DDSLINK_BUILD_BROKER=OFF'  sh ${workspaceFolder}/tools/build.sh",
            "args": [
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "broker",
            "command": "DSA_CMAKE_ARGS='-DCMAKE_BUILD_TYPE=DEBUG -DDSLINK_BUILD_EXAMPLES=OFF -DDSLINK_BUILD_BROKER=ON'  sh ${workspaceFolder}/tools/build.sh",
            "args": [
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}