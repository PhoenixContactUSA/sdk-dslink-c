{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "responder-example",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/responder",
            "args": ["--broker","${input:brokerURL}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "examples",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "requester-example",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/requester",
            "args": ["--broker","${input:brokerURL}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "examples",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "broker",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/broker",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "broker",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ],
    "inputs": [
        {
          "type": "pickString",
          "id": "brokerURL",
          "description": "What's the target broker url?",
          "options": [
            "http://192.168.0.97:8080/conn",
            "http://127.0.0.1:8080/conn",
          ],
          "default": "http://127.0.0.1:8080/conn"
        }
      ]
}